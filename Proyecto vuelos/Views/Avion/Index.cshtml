@using Proyecto_vuelos.Entidades;
@model List<Avion>


@section css
{
        <!-- DataTables CSS -->
    <link href="~/Content/css/dataTables/dataTables.bootstrap.css" rel="stylesheet">

    <!-- DataTables Responsive CSS -->
    <link href="~/Content/css/dataTables/dataTables.responsive.css" rel="stylesheet">
}


<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading" style="margin-bottom: 15px">
                Aviones
            </div>
            <a href="@Url.Action("Registro","Avion")" class="btn btn-primary" style="margin-left: 15px">Agregar nuevo</a>
            <div class="panel-body">
                <div class="table-responsive">

                    <!-- tabla aquí -->
                    <table class="table table-striped table-bordered table-hover" id="tabla">
                        <thead>
                            <tr>
                                <th scope="col" style="width: 5%">id</th>
                                <th scope="col">Placa</th>
                                <th scope="col">Nombre</th>
                                <th scope="col" style="width: 5%">Acciones</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (Avion a in Model)
                            {
                                <tr>
                                    <th scope="row">
                                        @a.Id
                                    </th>
                                    <td>
                                        @a.Placa
                                    </td>
                                    <td>
                                        @a.Nombre
                                    </td>
                                    <td>
                                        <a href="#" class="btn btn-primary btn-circle"><i class="fa fa-pencil"></i></a>
                                        <a href="#" class="btn btn-danger btn-circle"><i class="fa fa-trash-o"></i></a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>

                </div>
            </div>
        </div>
    </div>
</div>

@section js
{
    <script>
        $(document).ready(function () {
            $('#tabla').DataTable();
        });
    </script>

    <!-- DataTables JavaScript -->
<script src="~/Content/js/dataTables/jquery.dataTables.min.js"></script>
<script src="~/Content/js/dataTables/dataTables.bootstrap.min.js"></script>
}

