@using Proyecto_vuelos.Entidades
@model Vuelo
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                Registro
            </div>
            <div class="panel-body">

                <!--Formulario aquí-->
                <form action="@Url.Action("Guardar","Vuelo")">
                    <input type="hidden" class="form-control" name="id" value="@Model.Id">
                    <div class="form-group">
                        <label>Origen:</label>
                        <input class="form-control" name="origen" value="@if (Model.Id != 0) { @Model.Origen}" />
                    </div>
                    <div class="form-group">
                        <label>Destino:</label>
                        <input class="form-control" name="destino" value="@if (Model.Id != 0) { @Model.Destino}" />
                    </div>
                    <div class="form-group">
                        <label>idAvion:</label>
                        <input class="form-control" name="idAvion" value="@if (Model.Id != 0) { @Model.Avion.Id}" />
                    </div>
                    <div class="form-group">
                        <label>Capacidad:</label>
                        <input class="form-control" name="capacidad" value="@if (Model.Id != 0) { @Model.Capacidad}" />
                    </div>
                    <div class="form-group">
                        <label>Fecha:</label>
                        <input class="form-control" name="fecha" value="@if (Model.Id != 0) { @Model.Fecha}" />
                    </div>
                    <button class="btn btn-success" type="submit">Guardar</button>

                </form>
            </div>
        </div>
    </div>
</div>
